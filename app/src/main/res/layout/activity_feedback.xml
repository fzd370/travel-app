<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FeedbackActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How do you feel about TravelApp?"
        android:id="@+id/textView"
        android:textSize="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:fontFamily="sans-serif-medium" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnHappy"
        android:padding="5dp"
        android:src="@drawable/happy"
        android:scaleType="fitCenter"
        android:onClick="HappyFunction"
        android:background="@null"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/btnNeutral"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnNeutral"
        android:padding="5dp"
        android:src="@drawable/neutral"
        android:scaleType="fitCenter"
        android:onClick="NeutralFunction"
        android:background="@null"
        android:layout_marginBottom="113dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnHappy" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnNthappy"
        android:padding="5dp"
        android:src="@drawable/nthappy"
        android:scaleType="fitCenter"
        android:onClick="NthappyFunction"
        android:background="@null"
        android:layout_below="@+id/btnHappy"
        android:layout_toEndOf="@+id/btnHappy" />

</RelativeLayout>
